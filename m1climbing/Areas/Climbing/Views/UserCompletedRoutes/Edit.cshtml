@model m1climbing.Areas.Climbing.Models.UserCompletedRoute

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>UserCompletedRoute</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input asp-for="UserId" type="hidden" value="@ViewData["UserId"]" />
            </div>
            <div class="form-group">
                <label class="control-label">Crag</label>
                <select class="form-control" asp-items="ViewBag.CragId" id="CragId"></select>
            </div>
            <div class="form-group">
                <label asp-for="RouteId" class="control-label"></label>
                <select asp-for="RouteId" class="form-control" asp-items="ViewBag.RouteId" id="RouteId" disabled>
                    <option value="">Select a crag first</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProposedGrade" class="control-label"></label>
                <input asp-for="ProposedGrade" class="form-control" />
                <span asp-validation-for="ProposedGrade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrivateNote" class="control-label"></label>
                <input asp-for="PrivateNote" class="form-control" />
                <span asp-validation-for="PrivateNote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_CragRouteScripts");}
}
